{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="text-center mb-4">S'enregistrer</h1>
				<div class="card p-4 shadow">
					{{ form_errors(registrationForm) }}
					{{ form_start(registrationForm, {'attr': {'class': 'g-3'}}) }}
					<div class="mb-3">
						{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="mb-3">
						{{ form_row(registrationForm.plainPassword.first, {
                            'label': 'Mot de passe',
                            'attr': {'class': 'form-control'}
                        }) }}
					</div>
					<div class="mb-3">
						{{ form_row(registrationForm.plainPassword.second, {
                            'label': 'Confirmez le mot de passe',
                            'attr': {'class': 'form-control'}
                        }) }}
					</div>
					<div class="mb-3 form-check">
						{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
							<label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">
							{# {{ registrationForm.agreeTerms.vars.label }} #}
						</label>
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-primary">S'enregistrer</button>
					</div>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
