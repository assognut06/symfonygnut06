						</div>
					</div>

					{{ form_end(form_physique) }}
				</div>

				{# Formulaire Société #}
				<div id="form-societe" class="card p-4 shadow-lg rounded-4 border-0" style="display: none;">
					{{ form_start(form_societe, {'attr': {'onsubmit': 'return validateRecaptcha("societe");'}}) }}

					<div id="societe-step-1">
