{% extends 'base.html.twig' %}

{% block title %}Test OAuth Configuration{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">üîç Test OAuth Configuration</h1>
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            
            <div class="card mb-4">
                <div class="card-header">
                    <h3>üìä Status des Clients OAuth</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Microsoft Azure</h5>
                            <p class="mb-2">{{ azure_status }}</p>
                            {% if azure_error %}
                                <div class="alert alert-danger">
                                    <small>{{ azure_error }}</small>
                                </div>
                            {% endif %}
                            <p><strong>Client ID:</strong> <code>{{ azure_client_id }}</code></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Google</h5>
                            <p class="mb-2">{{ google_status }}</p>
                            {% if google_error %}
                                <div class="alert alert-danger">
                                    <small>{{ google_error }}</small>
                                </div>
                            {% endif %}
                            <p><strong>Client ID:</strong> <code>{{ google_client_id }}</code></p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h3>üß™ Tests de Redirection</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="{{ path('oauth_test_azure') }}" class="btn btn-primary w-100 mb-2">
                                <i class="fab fa-microsoft"></i> Tester Azure OAuth
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="{{ path('oauth_test_google') }}" class="btn btn-danger w-100 mb-2">
                                <i class="fab fa-google"></i> Tester Google OAuth
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h3>üîß Configuration Attendue</h3>
                </div>
                <div class="card-body">
                    <h5>Azure App Registration</h5>
                    <ul>
                        <li><strong>Redirect URI:</strong> <code>{{ url('connect_outlook_check') }}</code></li>
                        <li><strong>Permissions:</strong> openid, profile, email, User.Read</li>
                        <li><strong>Tenant:</strong> common</li>
                    </ul>
                    
                    <h5>Google Cloud Console</h5>
                    <ul>
                        <li><strong>Redirect URI:</strong> <code>{{ url('connect_google_check') }}</code></li>
                        <li><strong>Scopes:</strong> openid, profile, email</li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>üîó Liens de Test Direct</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Routes Outlook</h6>
                            <ul class="list-unstyled">
                                <li><a href="{{ path('connect_outlook_start') }}" target="_blank">{{ path('connect_outlook_start') }}</a></li>
                                <li><code>{{ path('connect_outlook_check') }}</code></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Routes Google</h6>
                            <ul class="list-unstyled">
                                <li><a href="{{ path('connect_google_start') }}" target="_blank">{{ path('connect_google_start') }}</a></li>
                                <li><code>{{ path('connect_google_check') }}</code></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}
{% endblock %}
