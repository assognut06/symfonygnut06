{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">

			<div class="col-md-6">
				<form method="post" class="needs-validation" novalidate>
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté en tant que
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Déconnexion</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-3 fw-normal">Veuillez vous connecter</h1>
					<div class="card p-4 shadow">
						<div class="form-floating mb-3">
							<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="name@example.com" autocomplete="email" required autofocus>
							<label for="username">Email</label>
						</div>
						<div class="form-floating mb-3">
							<input type="password" name="_password" id="password" class="form-control" placeholder="Password" autocomplete="current-password" required>
							<label for="password">Mot de passe</label>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"><!-- Uncomment below for remember me functionality -->
						<!-- <div class="checkbox mb-3">
												            <label>
												                <input type="checkbox" name="_remember_me"> Se souvenir de moi
												            </label>
												        </div> -->
							<button class="w-100 btn btn-lg btn-primary" type="submit"> Se connecter</button>
					</form>
					<div class="my-4 text-center">
						<a href="{{ path('app_forgot_password_request') }}">Mot de passe perdu</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
