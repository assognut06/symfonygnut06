<!-- Alliés / Partenaires -->
<section class="bg-main w-100 py-5" aria-labelledby="partenaires-gnut06">
    <div class="container-fluid text-center text-white">
        <h2 id="partenaires-gnut06" class="mb-4">Nos alliés dans nos actions</h2>

        <div class="carrousel-container w-100 overflow-hidden">
            <div class="carrousel-wrapper d-flex align-items-center" id="carrouselWrapper">
                {% for i in 1..2 %}
                    {% for entreprise in entreprises %}
                        {% if entreprise.logo %}
                            <div class="carrousel-slide d-flex justify-content-center align-items-center bg-dark rounded p-3 mx-3">
                                <a href="{{ entreprise.url }}" target="_blank" rel="noopener noreferrer"
                                   data-bs-toggle="tooltip"
                                   data-bs-placement="top"
                                   title="{{ entreprise.nom }}">
                                    <img src="{{ asset('uploads/logo_entreprises/' ~ entreprise.logo) }}"
                                         alt="Logo {{ entreprise.nom }}"
                                         class="carrousel-img img-fluid">
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
    .carrousel-container {
        width: 100%;
        overflow: hidden;
    }

    .carrousel-wrapper {
        display: flex;
        width: max-content;
        animation: scrollInfini 50s linear infinite;
    }

    .carrousel-slide {
        min-width: 150px;
        height: 120px;
        background: #0f0f1a;
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: background 0.3s ease;
    }

    .carrousel-slide:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .carrousel-img {
        max-width: 120px;
        max-height: 100px;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .carrousel-slide:hover .carrousel-img {
        transform: scale(1.1);
    }

    @keyframes scrollInfini {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-50%);
        }
    }

    @media (max-width: 768px) {
        .carrousel-slide {
            min-width: 100px;
            height: 80px;
        }
        .carrousel-img {
            max-width: 70px;
            max-height: 60px;
        }
    }
</style>
