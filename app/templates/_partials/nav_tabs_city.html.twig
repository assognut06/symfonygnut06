<div>
    <ul class="nav nav-tabs mt-5 pt-5">
        <li class="nav-item">
            <a class="nav-link{{ (app.request.attributes.get('_route') == 'app_asso_recommander') ? ' active' : '' }}" href="{{ path('app_asso_recommander') }}">Toutes</a>
        </li>
        {% for city in cities %}
            <li class="nav-item">
                <a class="nav-link{{ (app.request.attributes.get('_route') == 'app_asso_recommander_ville' and app.request.get('city') == city.city) ? ' active' : '' }}" href="{{ path('app_asso_recommander_ville', {'city': city.city}) }}">{{ city.city }}</a>
            </li>
        {% endfor %}
        <li class="nav-item">
            <a class="nav-link disabled">A venir</a>
        </li>
    </ul>
</div>
